pipeline {
  agent any

  tools {
    maven 'maven3'
  }

  environment {
    IMAGE_NAME = "abhayt7/studentapp"
  }

  stages {

    stage('Checkout') {
      steps {
        git 'https://github.com/abhayt7/Real-Time-DevOps-CI-CD-Project-.git'
      }
    }

    stage('Build') {
      steps {
        sh 'cd app && mvn clean package'
      }
    }

    stage('SonarQube Analysis') {
      steps {
        withSonarQubeEnv('sonar') {
          sh '''
            export JAVA_HOME=/usr/lib/jvm/java-11-openjdk-amd64
            export PATH=$JAVA_HOME/bin:$PATH
            java -version
            cd app
            mvn sonar:sonar -Dsonar.projectKey=real-time-devops-project
          '''
        }
      }
    }

    stage('Docker Build') {
      steps {
        sh 'docker build -t $IMAGE_NAME:latest .'
      }
    }

  }
}
