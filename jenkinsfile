pipeline {
    agent { label 'slave' }

    tools {
        maven 'maven3'
    }

    environment {
        DOCKER_USER = "abhayt7"
        IMAGE_NAME  = "studentapp"
        IMAGE_TAG   = "latest"
    }

    stages {

        stage('Build') {
            steps {
                sh 'cd app && mvn clean package'
            }
        }

        stage('Docker Build') {
            steps {
                sh 'cd app && docker build -t $DOCKER_USER/$IMAGE_NAME:$IMAGE_TAG .'
            }
        }
    }
}
